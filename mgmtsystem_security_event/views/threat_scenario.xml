<openerp>
    <data>

        <record id="view_mgmtsystem_threat_scenario_form" model="ir.ui.view">
            <field name="name">mgmtsystem.security.threat.scenario.form</field>
            <field name="model">mgmtsystem.security.threat.scenario</field>
            <field name="arch" type="xml">
                <form string="Threat Scenario">
                    <group colspan="4" col="4">
                        <field name="name"/>
                        <field name="description"/>
                        <field name="origin"/>

                        <field name="original_probability"/>
                        <field name="original_severity"/>

                        <field name="current_probability"/>
                        <field name="current_severity"/>

                        <field name="residual_probability"/>
                        <field name="residual_severity"/>
                        <field name="underlying_assets" widget="many2many">
                            <tree>
                                <field name="name"/>
                                <field name="category"/>
                                <field name="essential_assets" widget="many2many">
                                    <tree>
                                        <field name="name" />
                                        <field name="description" />
                                        <field name="responsible" />
                                    </tree>
                                </field>
                            </tree>
                        </field>
                    </group>
                </form>
            </field>
        </record>

        <record id="view_mgmtsystem_threat_scenario_tree" model="ir.ui.view">
            <field name="name">mgmtsystem.security.threat.scenario.tree</field>
            <field name="model">mgmtsystem.security.threat.scenario</field>
            <field name="arch" type="xml">
                <tree string="Threat Scenarios">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="origin"/>

                    <field name="original_probability"/>
                    <field name="original_severity"/>

                    <field name="current_probability"/>
                    <field name="current_severity"/>

                    <field name="residual_probability"/>
                    <field name="residual_severity"/>
                </tree>
            </field>
        </record>

        <record id="open_mgmtsystem_threat_scenario_list" model="ir.actions.act_window">
            <field name="name">Threat Scenario</field>
            <field name="res_model">mgmtsystem.security.threat.scenario</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" eval="False"/>
        </record>

        <menuitem id="menu_open_mgmtsystem_threat_scenario" 
            action="open_mgmtsystem_threat_scenario_list" 
            parent="menu_mgmtsystem_threats"
            sequence="20" 
            groups="mgmtsystem.group_mgmtsystem_manager"/>

    </data>
</openerp>
